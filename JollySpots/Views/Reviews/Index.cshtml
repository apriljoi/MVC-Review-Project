@model IEnumerable<JollySpots.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-sm-5 col-md-5">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(model => item.Name)</h3> @*changed to DisplayFor and item.Name so that everything would be displayed. I can't explain how it works, but I definitely get that it works. 
                                                                      this was one of my favorite parts of the project. Being able to see everything display on the reviews page by changing a coupld of words was really cool*@
                    <h4>@Html.DisplayFor(model => item.Destination)</h4>
                    <h5>@Html.DisplayFor(model => item.DateVisited)</h5>
                    <p>@Html.DisplayFor(model => item.Comment)</p>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.ID }, new { role = "button", @class = "btn btn-primary" })  </p>
                </div>
            </div>
        </div>
    }

</div>

